		<div class="col-12 col-md-9">
			<main>
				<section class="media">
					<img class="mr-5 mt-2"src='<%= item.imageURL %>' height="100" width="100" alt="Jugal">
					<div class="media-body">
						<h2><%= item.itemName %></h2>
